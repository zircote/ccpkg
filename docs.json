{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "ccpkg",
  "colors": {
    "primary": "#09090b",
    "light": "#FAFAFA",
    "dark": "#09090b"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/images/logo-light.svg",
    "dark": "/images/logo-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/zircote/ccpkg"
      }
    ]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Overview",
        "pages": ["introduction"]
      },
      {
        "tab": "Specification",
        "pages": [
          {
            "group": "Format",
            "pages": [
              "specification/overview",
              "specification/archive-format",
              "specification/manifest",
              "specification/component-types",
              "specification/configuration"
            ]
          },
          {
            "group": "Lifecycle",
            "pages": [
              "specification/install-lifecycle",
              "specification/lockfile",
              "specification/lazy-loading",
              "specification/registry"
            ]
          },
          {
            "group": "Reference",
            "pages": [
              "specification/security",
              "specification/portability",
              "specification/versioning",
              "specification/appendices"
            ]
          }
        ]
      },
      {
        "tab": "Design",
        "pages": ["design/rationale"]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/zircote/ccpkg"
    }
  },
  "seo": {
    "indexing": "navigable"
  },
  "contextual": {
    "options": ["copy", "view"]
  }
}
